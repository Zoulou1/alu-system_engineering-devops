#!/usr/bin/env bash
# Script to configure Nginx with a custom header "X-Served-By" using the hostname of the server

# Update the package list and install Nginx
sudo apt-get update -y
sudo apt-get install -y nginx

# Configure Nginx to add a custom header with the server hostname
# Set up the default server block to include the X-Served-By header
sudo tee /etc/nginx/sites-available/default > /dev/null <<EOL
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
        add_header X-Served-By \$hostname;
    }
}
EOL

# Reload and restart Nginx to apply changes
sudo nginx -t && sudo systemctl restart nginx

echo "Nginx configured with custom header X-Served-By set to the hostname."

