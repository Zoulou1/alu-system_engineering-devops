#!/bin/bash

# Update the package list
sudo apt-get update -y

# Install nginx and automatically answer "yes" to any prompts
sudo apt-get install nginx -y

# Ensure nginx is listening on port 80 (default setting)
sudo sed -i 's/listen 80 default_server;/listen 80;/g' /etc/nginx/sites-available/default

# Update the default Nginx welcome page to display "Holberton School"
echo "Holberton School for the win!" | sudo tee /var/www/html/index.html

# Restart Nginx service using the init.d script
sudo /etc/init.d/nginx restart

# Confirm Nginx setup
echo "Nginx installed and configured to display 'Holberton School for the win!' on the default page."
