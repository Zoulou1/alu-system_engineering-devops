#!/usr/bin/env bash
# Script to configure Nginx with a custom header "X-Served-By" using the hostname of the server

# Update the package list and install Nginx if not installed
sudo apt-get update -y
sudo apt-get install nginx -y

# Create a new server block configuration or modify the default one to include the custom header
sudo tee /etc/nginx/sites-available/default > /dev/null <<EOL
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
        add_header X-Served-By \$hostname;
    }
}
EOL

# Restart Nginx to apply the configuration changes
sudo nginx -t && sudo systemctl restart nginx

echo "Nginx configured with custom header X-Served-By: $HOSTNAME"

